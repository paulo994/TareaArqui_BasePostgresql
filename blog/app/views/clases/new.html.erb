<h1>Nuevo comentario foro</h1>

<%= form_with scope: :clase, url: clases_path, local: true do |form| %>

    <% if @clase.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@clase.errors.count, "error,") %>
                prohibido este comentario
            </h2>
            <ul>
                <% @clase.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label :comentario %><br>
        <%= form.text_area :comentario %>
    </p>

    <p>
        <%= form.submit :"Guardar comentario"%>
    </p>

<% end %>

<%= link_to 'Atras', clases_path %>